<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="archivator" transaction-type="RESOURCE_LOCAL">
		<class>de.archivator.entities.Archivale</class>
		<class>de.archivator.entities.Dokumentart</class>
		<class>de.archivator.entities.Name</class>
		<class>de.archivator.entities.Organisationseinheit</class>
		<class>de.archivator.entities.Schlagwort</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/archivator.ddb;create=true"/>
			<property name="javax.persistence.jdbc.user" value="archivator"/>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
		</properties>
	</persistence-unit>
</persistence>
