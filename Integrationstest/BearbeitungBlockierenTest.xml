<?xml version="1.0" encoding="UTF-8"?>
<testplan xmlns="http://www.archivator.de/testplan" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.archivator.de/testplan testplan.xsd">
	<testfall titel="Bearbeitung verwehren">
		<vorraussetzungen>
			<vorraussetzung>Benutzer ist nicht angemeldet.</vorraussetzung>
		</vorraussetzungen>
		<durchführung>
			<schritt>
			    <!-- Benutzer öffnet ein Archivale zur Detailansicht. -->
				<ergebnisse>
					<ergebnis><!-- Kein Bearbeitungsbutton wird angezeigt. --></ergebnis>
				</ergebnisse>
			</schritt>
		</durchführung>
		<durchführung>
		    <schritt>
			    <!-- Falls der Bearbeitungsbutton angezeigt wird, wird dieser Schritt ausgeführt. -->
			    <!-- Bearbeiten-Button wird ausgewählt. -->
			    <ergebnisse>
			        <ergebnis><!-- Dem Benutzer wird über ein Textfeld mitgeteilt, dass er 
			            keine Zugriffsrechte hat. --></ergebnis>
			    </ergebnisse>
			</schritt>
		</durchführung>
	</testfall>
</testplan>